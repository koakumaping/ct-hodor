@import '../../assets/stylus/var'
@import '../../assets/stylus/color'

.ct-table
  position: relative
  width: 100%
  &.ct-table-border
    border-top: 1px solid $border-color
    border-left: 1px solid $border-color
    border-right: 0
    > .ct-table-body-warp
      > table > tbody > tr > td
        border-right: 1px solid $border-color
    > .ct-table-header-warp
      > table > thead > tr > th
        border-right: 1px solid $border-color
        border-bottom: 1px solid $border-color
  .hidden-columns
    display: none

  .ct-table-empty
    position: relative
    text-align: center
    background: #fff
    padding: 48px
    border-bottom: 1px solid $border-color

  .ct-table-loading
    position: relative
    text-align: center
    padding: 100px

  .ct-table-header-warp,
  .ct-table-footer-warp
    width: 100%
    overflow: hidden
  .ct-table-body-warp
    width: 100%
    overflow: auto

  .ct-table-fixed
    position: absolute
    left: 0
    top: 0
    z-index: 1
    overflow-x: hidden
    box-shadow: 0 0 8px #d3d4d6
    .ct-table-fixed-header-warp
      position: absolute
      left: 0
      top: 0
      overflow: hidden
      z-index: 3
    .ct-table-fixed-body-warp
      position: absolute
      left: 0
      top: 44px
      overflow: hidden
      z-index: 3
  .ct-table-fixed-right
    position: absolute
    left: auto
    right: 0
    top: 0
    overflow: hidden
    box-shadow: -1px 0 8px #d3d4d6
    .ct-table-fixed-header-warp
      position: absolute
      right: 0
      left: auto
      top: 0
      overflow: hidden
      z-index: 3
    .ct-table-fixed-body-warp
      position: absolute
      left: auto
      right: 0
      top: 44px
      overflow: hidden
      z-index: 3

  .ct-table-header,
  .ct-table-body,
  .ct-table-footer
    table-layout: fixed
  .ct-table-fixed-right-patch
    position: absolute
    top: -1px
    right: 0
    background-color: #eef1f6
  table
    width: 100%
    margin: 0
    padding: 0
    text-align: left
    border-collapse: separate
    border-spacing: 0
    border-radius: 4px 4px 0 0

    > thead
      border-radius: 4px 4px 0 0
      overflow: hidden
      > tr > th
        background-color: #f1f1f1
        height: 40px
        text-transform: uppercase
        font-size: 12px
        letter-spacing: 1px
        > .cell
          line-height: 24px
          padding-left: 16px
          padding-right: 16px

    > tbody > tr
      padding: 5px
      transition: all 0.3s ease
      border-bottom: 1px solid
      background-color: #fff
      &.ct-table-row-stripe > td
        background-color: #fafafa
      &.hover-row > td,
      &.current-row > td
        background-color: #eef1f6
      &:hover > td
        background-color: #eef1f6
      > td
        border-bottom: 1px solid $border-color
        height: 40px
        font-weight: normal
        &.is-hidden > .cell
          visibility: hidden
        & > .cell
          line-height: 24px
          padding-left: 16px
          padding-right: 16px