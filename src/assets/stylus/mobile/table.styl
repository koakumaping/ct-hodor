.table-warp
  padding: 8px 8px
  &.has-border
      border: 0
table
  border: 0

table thead
  display: none

table tr
  margin-bottom: 10px
  display: block
  border-bottom: 1px solid #ddd
  border-left: 1px solid #ddd
  border-right: 1px solid #ddd
  padding-bottom: 0
  &:hover
    background-color: #fff

table td
  display: block
  text-align: right
  font-size: 13px
  border-bottom: 1px dotted #ccc

table td:last-child
  border-bottom: 0

table td:before
  content: attr(data-label)
  text-transform: uppercase
  font-weight: bold
  float: left
